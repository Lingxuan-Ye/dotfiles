[core]
	autocrlf = input
	safecrlf = warn
	ignorecase = false
	quotepath = false
	editor = code --wait
	symlinks = true

[init]
	defaultBranch = main

[gpg]
	format = ssh

[commit]
	gpgsign = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

